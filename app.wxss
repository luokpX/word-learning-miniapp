/* app.wxss - 全局样式 */

/* 全局容器 */
page {
  background-color: #F5F5F5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', 'Helvetica Neue', Helvetica, Arial, sans-serif;
  font-size: 16px;
  color: #333333;
  line-height: 1.6;
}

/* 主色调变量 */
.primary-color {
  color: #4A90E2;
}

.primary-bg {
  background-color: #4A90E2;
}

/* 卡片样式 */
.card {
  background-color: #ffffff;
  border-radius: 12px;
  padding: 20rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

/* 按钮样式 */
.btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  transition: all 0.3s;
}

.btn-primary {
  background-color: #4A90E2;
  color: #ffffff;
}

.btn-primary:active {
  background-color: #357ABD;
}

.btn-secondary {
  background-color: #ffffff;
  color: #4A90E2;
  border: 2rpx solid #4A90E2;
}

.btn-success {
  background-color: #52C41A;
  color: #ffffff;
}

.btn-warning {
  background-color: #FAAD14;
  color: #ffffff;
}

.btn-danger {
  background-color: #FF4D4F;
  color: #ffffff;
}

/* 文字样式 */
.text-center {
  text-align: center;
}

.text-bold {
  font-weight: bold;
}

.text-small {
  font-size: 24rpx;
}

.text-medium {
  font-size: 28rpx;
}

.text-large {
  font-size: 36rpx;
}

.text-xl {
  font-size: 48rpx;
}

/* 间距工具类 */
.mt-10 { margin-top: 10rpx; }
.mt-20 { margin-top: 20rpx; }
.mt-30 { margin-top: 30rpx; }
.mb-10 { margin-bottom: 10rpx; }
.mb-20 { margin-bottom: 20rpx; }
.mb-30 { margin-bottom: 30rpx; }
.ml-10 { margin-left: 10rpx; }
.ml-20 { margin-left: 20rpx; }
.mr-10 { margin-right: 10rpx; }
.mr-20 { margin-right: 20rpx; }
.p-10 { padding: 10rpx; }
.p-20 { padding: 20rpx; }
.p-30 { padding: 30rpx; }

/* Flex 布局 */
.flex {
  display: flex;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

/* 进度条 */
.progress-bar {
  width: 100%;
  height: 12rpx;
  background-color: #E8E8E8;
  border-radius: 6rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #4A90E2 0%, #52C41A 100%);
  transition: width 0.3s ease;
}

/* 徽章 */
.badge {
  display: inline-block;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.badge-primary {
  background-color: #E6F4FF;
  color: #4A90E2;
}

.badge-success {
  background-color: #F6FFED;
  color: #52C41A;
}

.badge-warning {
  background-color: #FFFBE6;
  color: #FAAD14;
}

/* 图标大小 */
.icon-sm {
  width: 32rpx;
  height: 32rpx;
}

.icon-md {
  width: 48rpx;
  height: 48rpx;
}

.icon-lg {
  width: 64rpx;
  height: 64rpx;
}

.icon-xl {
  width: 96rpx;
  height: 96rpx;
}

/* 加载动画 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.loading::after {
  content: '';
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #E8E8E8;
  border-top-color: #4A90E2;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}
