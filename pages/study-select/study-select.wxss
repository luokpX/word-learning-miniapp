.container {
  min-height: 100vh;
  background-color: #F5F5F5;
  padding-bottom: 120rpx;
}

.header {
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  padding: 40rpx;
}

.header-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  display: block;
  margin-bottom: 10rpx;
}

.header-subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
  padding: 30rpx 30rpx 20rpx;
}

.mode-list,
.book-list {
  background-color: #ffffff;
}

.mode-item,
.book-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.mode-item:last-child,
.book-item:last-child {
  border-bottom: none;
}

.mode-icon,
.book-icon {
  font-size: 50rpx;
  margin-right: 25rpx;
}

.mode-info,
.book-info {
  flex: 1;
}

.mode-name,
.book-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  display: block;
  margin-bottom: 8rpx;
}

.mode-desc,
.book-count {
  font-size: 26rpx;
  color: #999999;
}

.mode-arrow,
.book-arrow {
  font-size: 32rpx;
  color: #CCCCCC;
}

.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx;
}

.empty-text {
  font-size: 30rpx;
  color: #666666;
  margin-bottom: 10rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #999999;
}
