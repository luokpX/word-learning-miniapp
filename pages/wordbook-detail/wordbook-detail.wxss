.container {
  min-height: 100vh;
  background-color: #F5F5F5;
  padding-bottom: 120rpx;
}

.header {
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  padding: 40rpx;
}

.book-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #ffffff;
  display: block;
  margin-bottom: 10rpx;
}

.book-count {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

.toolbar {
  display: flex;
  background-color: #ffffff;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.tool-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.tool-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.tool-text {
  font-size: 24rpx;
  color: #666666;
}

.word-list {
  background-color: #ffffff;
}

.word-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.word-info {
  flex: 1;
}

.word-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  display: block;
  margin-bottom: 5rpx;
}

.word-phonetic {
  font-size: 24rpx;
  color: #999999;
  margin-right: 15rpx;
}

.word-meaning {
  font-size: 26rpx;
  color: #666666;
}

.word-actions {
  display: flex;
  gap: 20rpx;
}

.play-btn,
.delete-btn {
  font-size: 36rpx;
  padding: 10rpx;
}

.delete-btn {
  color: #FF4D4F;
}

.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 40rpx;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #333333;
  margin-bottom: 15rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #999999;
}

.add-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 100;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #ffffff;
  border-radius: 30rpx 30rpx 0 0;
  padding: 40rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  display: block;
  margin-bottom: 30rpx;
  text-align: center;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 28rpx;
  color: #666666;
  display: block;
  margin-bottom: 10rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #E8E8E8;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.import-textarea {
  width: 100%;
  height: 500rpx;
  border: 2rpx solid #E8E8E8;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 28rpx;
}

.import-tips {
  background-color: #F5F5F5;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
}

.tips-title {
  font-size: 26rpx;
  color: #333333;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.tips-text {
  font-size: 24rpx;
  color: #666666;
  display: block;
  margin-bottom: 5rpx;
}

.modal-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 30rpx;
}

.btn-cancel,
.btn-confirm {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 30rpx;
  border: none;
}

.btn-cancel {
  background-color: #F5F5F5;
  color: #666666;
}

.btn-confirm {
  background-color: #4A90E2;
  color: #ffffff;
}

.import-mode-tabs {
  display: flex;
  margin-bottom: 30rpx;
  border-radius: 10rpx;
  overflow: hidden;
  border: 2rpx solid #4A90E2;
}

.mode-tab {
  flex: 1;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 28rpx;
  color: #4A90E2;
  background-color: #ffffff;
}

.mode-tab.active {
  background-color: #4A90E2;
  color: #ffffff;
}

.tips-warning {
  color: #FF9800;
  margin-top: 10rpx;
}

.import-progress {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background-color: #F5F5F5;
  border-radius: 10rpx;
}

.progress-bar {
  height: 20rpx;
  background-color: #E8E8E8;
  border-radius: 10rpx;
  overflow: hidden;
  margin-bottom: 15rpx;
}

.progress-fill {
  height: 100%;
  background-color: #4A90E2;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  color: #666666;
  display: block;
  text-align: center;
  margin-bottom: 10rpx;
}

.progress-stats {
  font-size: 24rpx;
  color: #999999;
  display: block;
  text-align: center;
}
