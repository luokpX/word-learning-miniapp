.container {
  min-height: 100vh;
  background-color: #F5F5F5;
  padding-bottom: 140rpx;
}

.header {
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  padding: 40rpx;
  border-radius: 0 0 30rpx 30rpx;
}

.header-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  display: block;
  margin-bottom: 10rpx;
}

.header-subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

.filter-tabs {
  display: flex;
  padding: 30rpx 20rpx;
  background-color: #ffffff;
  margin-bottom: 20rpx;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 15rpx 0;
  font-size: 28rpx;
  color: #666666;
  border-radius: 30rpx;
  transition: all 0.3s;
}

.tab.active {
  background-color: #4A90E2;
  color: #ffffff;
  font-weight: bold;
}

.word-count {
  padding: 20rpx 40rpx;
  font-size: 26rpx;
  color: #999999;
}

.word-grid {
  display: flex;
  flex-wrap: wrap;
  padding: 0 20rpx;
}

.word-card {
  width: calc(50% - 20rpx);
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 25rpx;
  margin: 10rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.word-card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.word-card-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.play-icon {
  width: 40rpx;
  height: 40rpx;
}

.play-icon-text {
  font-size: 36rpx;
}

.word-card-phonetic {
  font-size: 24rpx;
  color: #999999;
  display: block;
  margin-bottom: 8rpx;
}

.word-card-meaning {
  font-size: 28rpx;
  color: #666666;
  display: block;
}

.word-card-status {
  margin-top: 15rpx;
}

.status-badge {
  display: inline-block;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
}

.status-badge.mastered {
  background-color: #E8F8E8;
  color: #52C41A;
}

.add-word-btn {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 80%;
  height: 100rpx;
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(74, 144, 226, 0.4);
}

.add-btn-text {
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
}
