<view class="container">
  <view class="header">
    <text class="header-title">我的单词本</text>
    <text class="header-subtitle">创建和管理你的单词本</text>
  </view>

  <view class="book-list">
    <view 
      class="book-item" 
      wx:for="{{wordBooks}}" 
      wx:key="id"
      bindtap="goToBookDetail" 
      data-id="{{item.id}}">
      <view class="book-icon">📖</view>
      <view class="book-info">
        <text class="book-name">{{item.name}}</text>
        <text class="book-desc">{{item.description || '暂无描述'}}</text>
        <text class="book-count">{{item.words ? item.words.length : 0}} 个单词</text>
      </view>
      <text class="book-arrow">></text>
    </view>
  </view>

  <view class="empty-tip" wx:if="{{wordBooks.length === 0}}">
    <text class="empty-icon">📚</text>
    <text class="empty-text">还没有单词本</text>
    <text class="empty-hint">点击下方按钮创建你的第一个单词本</text>
  </view>

  <view class="add-book-btn" bindtap="showCreateModal">
    <text class="add-btn-text">+ 创建单词本</text>
  </view>

  <view class="modal" wx:if="{{showModal}}">
    <view class="modal-mask" bindtap="closeModal"></view>
    <view class="modal-content">
      <text class="modal-title">创建单词本</text>
      <view class="form-item">
        <text class="form-label">名称</text>
        <input class="form-input" placeholder="请输入单词本名称" value="{{newBook.name}}" bindinput="onNameInput"/>
      </view>
      <view class="form-item">
        <text class="form-label">描述（可选）</text>
        <input class="form-input" placeholder="请输入描述" value="{{newBook.description}}" bindinput="onDescInput"/>
      </view>
      <view class="modal-buttons">
        <button class="btn-cancel" bindtap="closeModal">取消</button>
        <button class="btn-confirm" bindtap="createBook">创建</button>
      </view>
    </view>
  </view>
</view>
